<div class="user-list">
    {{#each users}}
    <div class="user">
        <div class="user-info">
            <h2>{{this.firstName}} {{this.lastName}} </h2>
            <p>{{this.email}}</p>
            <p>Rol: {{this.role}}</p>
        </div>
        <div class="user-actions">
            <button class="delete-button" id="deleteUserButton{{this.email}}">Eliminar</button>
            <button class="edit-button" id="modifyRoleButton{{this.email}}">Modificar Rol</button>
        </div>
    </div>
    {{/each}}
</div>
<div class="containerButtonDelete"><button id="eliminarUsuario">Eliminar Usuarios inactivos</button></div>
<script src='/js/users.js'></script>